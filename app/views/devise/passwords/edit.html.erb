<div class="container p-0">
    <div class="row bg-white rounded-bottom shadow-box pt-3 pb-2 m-0 mb-3">
        <div class="col-12">
            <h4>Spremeni geslo</h4>
        </div>
    </div>
<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  <%= f.hidden_field :reset_password_token %>

  <div class="card shadow-box">
    
        <div class="card-body">
        
            <h4>Pridobi novo geslo</h4>
            <hr>

            <div class="form-group row">
                <label for="name" class="text-muted col-sm-2 col-form-label">Novo geslo:</label>
                <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class: "form-control col-sm-10" %>
            </div>

            <div class="form-group row">
                <label for="name" class="text-muted col-sm-2 col-form-label">Potrdi novo geslo:</label>
                <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control col-sm-10" %>
            </div>
              
            <div class="col-md-4 col-12 m-auto text-center">
            <%= button_tag( :class => "btn btn-lg btn-block orange-bg text-center py-0 m-auto") do %>
                    <span class="px-3 py-2">Shrani</span>
            <% end %>
            </div>

        </div>
    </div>
</div>
<% end %>